


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Fonts & Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/layoutStyle.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Itim&family=Pacifico&family=Parisienne&family=Playwrite+GB+S:ital,wght@0,100..400;1,100..400&display=swap" rel="stylesheet" />
</head>
<body>
    <nav class="navbar">
        <div>
            <a href="/Home/Index" class="navbar-brand"><span>Brother's</span> Kitchen</a>
        </div>

        <ul class="navbar_list_items">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Recipes", "Index", "Recipe", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer class="footer bg-dark text-white py-4">
            <div class="container text-center">
                <div class="row">
                    <!-- About Section -->
                    <div class="col-md-4 mb-3">
                        <h5>About Brother's Kitchen</h5>
                        <p>Explore delicious recipes and culinary tips from Brother's Kitchen! Your go-to place for inspiring, homemade recipes from around the world.</p>
                    </div>

                    <!-- Quick Links Section -->
                    <div class="col-md-4 mb-3">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="#home" class="text-white">Home</a></li>
                            <li><a href="#recipes" class="text-white">Recipes</a></li>
                            <li><a href="#about" class="text-white">About</a></li>
                            <li><a href="#contact" class="text-white">Contact</a></li>
                        </ul>
                    </div>

                    <!-- Social Media Section -->
                    <div class="col-md-4 mb-3">
                        <h5>Follow Us</h5>
                        <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-pinterest"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <hr class="my-3 border-light">
                <p class="mb-0">&copy; 2025 Brother's Kitchen. All rights reserved.</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        // Change navbar background on scroll
        window.onscroll = function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        };
    </script>
</body>
</html>
