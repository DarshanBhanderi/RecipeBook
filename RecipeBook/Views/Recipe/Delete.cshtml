@model RecipeBook.Models.Recipe

<style>
    .container {
        min-height: 82vh;
    }

        .container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://wallpaperaccess.com/full/2975527.jpg') no-repeat center bottom;
            background-size: cover;
            z-index: -1; /* Places the background behind the main content */
        }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Recipe</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this recipe?</h3>
                    <div>
                        <h4>Recipe Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Ingredients</dt>
                            <dd class="col-sm-9">@Model.Ingredients</dd>

                            <dt class="col-sm-3">Instructions</dt>
                            <dd class="col-sm-9">@Model.Instructions</dd>

                            <dt class="col-sm-3">Created At</dt>
                            <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
                        </dl>
                    </div>

                    <div class="text-center mt-4">
                        @using (Html.BeginForm("Delete", "Recipe", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", Model.RecipeID)
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                            <a href="@Url.Action("Index", "Recipe")" class="btn btn-secondary btn-lg ml-2">Cancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>